<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="40dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:id="@+id/item_parent_student"
        android:background="?android:selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/ic_student"/>

            <TextView
                android:id="@+id/tv_parent_student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyen Van A"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_marginHorizontal="16dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:ellipsize="middle"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_student_parent_total_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lớp tham gia: 0"
            android:textColor="@color/black"
            android:maxLines="1"
            android:layout_marginVertical="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm trung bình:"
                android:textColor="@color/black"
                android:maxLines="1"
                />
            <TextView
                android:id="@+id/tv_student_parent_avg_score"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="0.0"
                android:textSize="12sp"
                android:textColor="@color/blue_primary"
                android:textAlignment="center"
                android:paddingVertical="11dp"
                android:background="@drawable/bg_score"
                android:layout_marginHorizontal="8dp"/>

        </LinearLayout>



    </LinearLayout>



</androidx.cardview.widget.CardView>